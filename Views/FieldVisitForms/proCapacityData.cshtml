@using Microsoft.EntityFrameworkCore;
@using IndustrialContoroler.Models.Repositories;
@model ProCapacity;
@inject IRepository<ProCapacity> proCapacitys;

@{
    //int FaNumber = 0;
    int counter = 1;
    int PCId = 0;
    var FaId = ViewData["FaId"];
    var PCData = proCapacitys.GetAllFaData(pc => pc.FaId.Equals(ViewData["FaId"]) && pc.IsDeleted == false).ToList();
}


<div class="table-responsive m*-2">

    <a class="btn btn-primary gradient-buttons col-md-2 ms-3" data-bs-toggle="modal" data-bs-target="#modalCenter">
        <i class="fas fa-plus mx-1 my-auto"></i> إضافة منتج
    </a>


    <form method="post">
        <div class="col-md-6 col-lg-4">
            <div class="mt-3">
                <!-- Modal -->
                <div class="modal fade" id="modalCenter" tabindex="-1" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="modalCenterTitle">بيانات المنتجات</h5>
                                <button type="button"
                                        class="btn-close"
                                        data-bs-dismiss="modal"
                                        aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <div class="row g-3">


                                    <div class="col-md-4">
                                        <label asp-for="PcProductName" class="form-label fs-5">اسم المنتج</label>
                                        <input asp-for="PcProductName" class="form-control" placeholder="اسم المنتج" />
                                        <span asp-validation-for="PcProductName" class="text-danger"></span>
                                    </div>

                                    <div class="col-md-4">
                                        <label asp-for="PcMeasruingUnit" class="form-label fs-5">وحدة القياس</label>
                                        <input asp-for="PcMeasruingUnit" class="form-control" placeholder="وحدة القياس" />
                                        <span asp-validation-for="PcMeasruingUnit" class="text-danger"></span>
                                    </div>

                                    <div class="col-md-4">
                                        <label asp-for="PcYearQuantity" class="form-label fs-5">الكمية المنتجة سنوياً</label>
                                        <input asp-for="PcYearQuantity" class="form-control" placeholder="الكمية المنتجة سنوياً" />
                                        <span asp-validation-for="PcYearQuantity" class="text-danger"></span>
                                    </div>

                                    <div class="row-md-6">
                                        <label asp-for="PcNotes" class="form-label fs-5">ملاحظات</label>
                                        <textarea asp-for="PcNotes" class="form-control" rows="1" placeholder="أكتب أي ملاحظات أخرى"></textarea>
                                    </div>
                                    <input asp-for="FaId" value="@FaId" class="form-control" hidden />
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-label-secondary" data-bs-dismiss="modal">
                                    الغاء
                                </button>
                                <button type="submit" asp-action="AddproCapacity" asp-controller="FieldVisitForms" class="btn btn-primary">أضافة</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </form>


    <div class="card m-3 mb-5">
        <div class="content-wrapper table-responsive " style="font-size: small; font-weight: 300;">

            <table class="table datatables-ajax table dataTable no-footer table-bordered" id="oneexample">
                <thead class="border-top">
                    <tr role="row">
                        <th class="sorting sorting_asc" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-sort="ascending" aria-label="رقم المنتج: activate to sort column descending" style="width: 200.8px;">رقم المنتج</th>
                        <th class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-label="اسم المنتج: activate to sort column ascending" style="width: 400.1px;">اسم المنتج</th>
                        <th class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-label="الكمية السنوية: activate to sort column ascending" style="width: 400.1px;">الكمية السنوية</th>
                        <th class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-label="وحدة القياس: activate to sort column ascending" style="width: 400.1px;">وحدة القياس</th>
                        <th class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-label=" ملاحظات : activate to sort column ascending" style="width: 400.1px;">ملاحظات</th>
                        <th class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-label=" الاجراءات: activate to sort column ascending" style="width: 400.1px;">الاجراءات</th>
                    </tr>
                </thead>

                <tbody class="table-border-bottom-0">

                    @if (PCData is not null)
                    {

                        @foreach (var item in PCData)
                        {
                            PCId = item.PcProductId;
                            <tr>
                                <td>@counter</td>
                                <td class="fs-5">@item.PcProductName</td>
                                <td class="fs-5">@item.PcYearQuantity</td>
                                <td class="fs-5">@item.PcMeasruingUnit</td>
                                <td class="fs-5">@item.PcNotes</td>
                                <td>
                                    <div>
                                        <button type="button" class="btn dropdown-toggle hide-arrow p-0" data-bs-toggle="dropdown" aria-expanded="false">
                                            <i class="bx bx-dots-vertical-rounded"></i>
                                        </button>
                                        <div class="dropdown-menu" data-popper-placement="bottom-start" style="position: absolute; inset: 0px auto auto 0px; margin: 0px; transform: translate(37px, 25px);">
                                            <a class="dropdown-item" role="button" aria-pressed="true" style="font-size: 14px;" data-bs-toggle="modal" data-bs-target="#proCapacity-@item.PcProductId">
                                                <i class="bx bx-edit-alt me-1"></i>
                                                تعديل
                                            </a>

                                            <a class="dropdown-item" role="button" aria-pressed="true" style="font-size: 14px; color:red;" data-bs-toggle="modal" data-bs-target="#confirmDeletion-@item.PcProductId">
                                                <i class="bx bx-trash me-1" data-bs-toggle="modal" data-bs-target="#confirmDeletion-@item.PcProductId"></i> حذف
                                            </a>

                                        </div>
                                    </div>
                                </td>
                            </tr>


                            <div class="modal fade" id="proCapacity-@item.PcProductId" tabindex="-1" aria-hidden="true">
                                <div class="modal-dialog modal-simple modal-enable-otp modal-dialog-centered">
                                    <form method="post">
                                        <!-- Modal -->


                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="modalCenterTitle">تعديل المنتج رقم @counter</h5>
                                                <button type="button"
                                                class="btn-close"
                                                data-bs-dismiss="modal"
                                                aria-label="Close"></button>
                                            </div>
                                            <div class="modal-body">
                                                <div class="row g-3">

                                                    <div class="col-md-4">
                                                        <label asp-for="PcProductName" class="form-label fs-5">اسم المنتج</label>
                                                        <input asp-for="PcProductName" class="form-control" placeholder="اسم المنتج" value="@item.PcProductName"/>
                                                        <span asp-validation-for="PcProductName" class="text-danger"></span>
                                                    </div>

                                                    <div class="col-md-4">
                                                        <label asp-for="PcMeasruingUnit" class="form-label fs-5">وحدة القياس</label>
                                                        <input asp-for="PcMeasruingUnit" class="form-control" placeholder="وحدة القياس" value="@item.PcMeasruingUnit"/>
                                                        <span asp-validation-for="PcMeasruingUnit" class="text-danger"></span>
                                                    </div>

                                                    <div class="col-md-4">
                                                        <label asp-for="PcYearQuantity" class="form-label fs-5">الكمية السنوية </label>
                                                        <input asp-for="PcYearQuantity" class="form-control" placeholder="الكمية المنتجة سنوياً" value="@item.PcYearQuantity"/>
                                                        <span asp-validation-for="PcYearQuantity" class="text-danger"></span>
                                                    </div>

                                                    <div class="row-md-6">
                                                        <label asp-for="PcNotes" class="form-label fs-5">ملاحظات</label>
                                                        <textarea asp-for="PcNotes" class="form-control" rows="1" placeholder="أكتب أي ملاحظات أخرى">@item.PcNotes</textarea>
                                                    </div>


                                                    <input asp-for="PcProductId" value="@item.PcProductId" hidden />
                                                    <input asp-for="FaId" value="@item.FaId" hidden />

                                                </div>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-label-secondary" data-bs-dismiss="modal">
                                                    الغاء
                                                </button>
                                                <button type="submit" asp-action="EditproCapacity" asp-controller="FieldVisitForms" class="btn btn-primary">تعديل</button>
                                            </div>

                                        </div>
                                    </form>
                                </div>
                            </div>


                            <div class="modal fade" id="confirmDeletion-@item.PcProductId" tabindex="-1" aria-hidden="true">
                                <div class="modal-dialog modal-simple modal-enable-otp modal-dialog-centered">
                                    <div class="modal-content p-3 p-md-5">
                                        <div class="modal-body">
                                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                            <div class="text-center mb-4"><h3 class="mb-4">حذف المنتج</h3></div>
                                            <h4 class="text-center"> هل أنت متأكد انك تريد الحذف ؟</h4>
                                            <div id="enableOTPForm" class="row g-3 mt-5">
                                                <div class="col-12" align="center">
                                                    <button type="reset" class="col-4 btn btn-label-success mx-3" data-bs-dismiss="modal" aria-label="Close">لا</button>
                                                    <a asp-action="DeleteproCapacity" asp-controller="FieldVisitForms" asp-route-id="@item.PcProductId" class="col-4 btn btn-danger me-1 me-sm-3 mx-5 ">نعم</a>
                                                </div>
                                            </div>
                                        </div>

                                    </div>
                                </div>
                            </div>

                            counter = counter + 1;
                        }
                    }

                </tbody>
            </table>



        </div>
    </div>


</div>





