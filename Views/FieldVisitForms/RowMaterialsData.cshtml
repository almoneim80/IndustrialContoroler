@using Microsoft.EntityFrameworkCore;
@using IndustrialContoroler.Models.Repositories;
@model RowMaterial;
@inject IRepository<RowMaterial> rowMaterials;

@{
    //int FaNumber = 0;
    int counter = 1;
    int RmId = 0;
    var FaId = ViewData["FaId"];
    var RMData = rowMaterials.GetAllFaData(rm => rm.FaId.Equals(ViewData["FaId"]) && rm.IsDeleted == false).ToList();
}


<div class="table-responsive m*-2">

    <a class="btn btn-primary gradient-buttons col-md-2 ms-3" data-bs-toggle="modal" data-bs-target="#modalCenter">
        <i class="fas fa-plus mx-1 my-auto"></i> إضافة مادة خام
    </a>


    <form method="post">
        <div class="col-md-6 col-lg-4">
            <div class="mt-3">
                <!-- Modal -->
                <div class="modal fade" id="modalCenter" tabindex="-1" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="modalCenterTitle">بيانات المواد الخام</h5>
                                <button type="button"
                                        class="btn-close"
                                        data-bs-dismiss="modal"
                                        aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <div class="row g-3">

                                    <div class="col-md-4">
                                        <label asp-for="RmName" class="form-label fs-5">اسم المادة الخام</label>
                                        <input asp-for="RmName" class="form-control" placeholder="اسم المادة الخام" />
                                        <span asp-validation-for="RmName" class="text-danger"></span>
                                    </div>

                                    <div class="col-md-4">
                                        <label asp-for="RmMeasruingUnit" class="form-label fs-5">وحدة القياس</label>
                                        <input asp-for="RmMeasruingUnit" class="form-control" placeholder="وحدة القياس" />
                                        <span asp-validation-for="RmMeasruingUnit" class="text-danger"></span>
                                    </div>

                                    <div class="col-md-4">
                                        <label asp-for="RmPercentInPro" class="form-label fs-5">ن.م في المنتج</label>
                                        <input asp-for="RmPercentInPro" class="form-control" placeholder="النسبة المئوية في المنتج" />
                                        <span asp-validation-for="RmPercentInPro" class="text-danger"></span>
                                    </div>

                                    <div class="col-md-6">
                                        <label asp-for="RmAmountUsed" class="form-label fs-5">الكمية المستخدمة سنوياً</label>
                                        <input asp-for="RmAmountUsed" class="form-control" placeholder="الكمية المستخدمة سنوياً" />
                                        <span asp-validation-for="RmAmountUsed" class="text-danger"></span>
                                    </div>


                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label asp-for="RmSource" class="form-label fs-5">المصدر</label>
                                            <select asp-for="RmSource" class="select2 form-select form-select-lg fs-5">
                                                <option value=Null disabled selected hidden>حدد مصدر المادة الخام</option>
                                                <option value="مستورد">مستورد</option>
                                                <option value="محلي">محلي</option>
                                            </select>
                                            <span asp-validation-for="RmSource" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <input asp-for="FaId" value="1" hidden />

                                    <div class="row-md-6">
                                        <label asp-for="RmNotes" class="form-label fs-5">ملاحظات</label>
                                        <textarea asp-for="RmNotes" class="form-control" rows="1" placeholder="أكتب أي ملاحظات أخرى"></textarea>
                                    </div>

                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-label-secondary" data-bs-dismiss="modal">
                                    الغاء
                                </button>
                                <button type="submit" asp-action="AddRowMaterials" asp-controller="FieldVisitForms" class="btn btn-primary">أضافة</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </form>


    <div class="card m-3 mb-5">
        <div class="content-wrapper table-responsive " style="font-size: small; font-weight: 300;">

            <table class="table datatables-ajax table dataTable no-footer table-bordered" id="oneexample">
                <thead class="border-top">
                    <tr role="row">
                        <th class="sorting sorting_asc" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-sort="ascending" aria-label="رقم المادة: activate to sort column descending" style="width: 200.8px;">رقم المادة</th>
                        <th class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-label="اسم المادة: activate to sort column ascending" style="width: 400.1px;">اسم المادة</th>
                        <th class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-label=" وحدة القياس : activate to sort column ascending" style="width: 400.1px;">وحدة القياس </th>
                        <th class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-label=" الكمية المستخدمة: activate to sort column ascending" style="width: 400.1px;">الكمية المستخدمة </th>
                        <th class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-label=" النسبة المئوية في المنتج: activate to sort column ascending" style="width: 400.1px;"> النسبة المئوية في المنتج </th>
                        <th class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-label=" المصدر : activate to sort column ascending" style="width: 400.1px;">المصدر</th>
                        <th class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-label=" ملاحظات : activate to sort column ascending" style="width: 400.1px;">ملاحظات</th>
                        <th class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-label=" الاجراءات: activate to sort column ascending" style="width: 400.1px;">الاجراءات</th>
                    </tr>
                </thead>

                <tbody class="table-border-bottom-0">

                    @if (RMData is not null)
                    {

                        @foreach (var item in RMData)
                        {
                            RmId = item.RmId;
                            <tr>
                                <td>@counter</td>
                                <td class="fs-5">@item.RmName</td>
                                <td class="fs-5">@item.RmMeasruingUnit</td>
                                <td class="fs-5">@item.RmAmountUsed</td>
                                <td class="fs-5">@item.RmPercentInPro</td>
                                <td class="fs-5">@item.RmSource</td>
                                <td class="fs-5">@item.RmNotes</td>
                                <td>
                                    <div>
                                        <button type="button" class="btn dropdown-toggle hide-arrow p-0" data-bs-toggle="dropdown" aria-expanded="false">
                                            <i class="bx bx-dots-vertical-rounded"></i>
                                        </button>
                                        <div class="dropdown-menu" data-popper-placement="bottom-start" style="position: absolute; inset: 0px auto auto 0px; margin: 0px; transform: translate(37px, 25px);">
                                            <a class="dropdown-item" asp-route-Id="@item.RmId" asp-controller="FieldVisitForms" asp-action="EditRowMaterials"><i class="bx bx-edit-alt me-1"></i> تعديل  </a>

                                            <a class="dropdown-item" role="button" aria-pressed="true" style="font-size: 14px;" data-bs-toggle="modal" data-bs-target="#confirmDeletion-@item.RmId">
                                                <i class="bx bx-trash me-1" data-bs-toggle="modal" data-bs-target="#confirmDeletion-@item.RmId"></i> حذف
                                            </a>

                                        </div>
                                    </div>
                                </td>
                            </tr>
                            counter = counter + 1;
                            <div class="modal fade" id="confirmDeletion-@item.RmId" tabindex="-1" aria-hidden="true">
                                <div class="modal-dialog modal-simple modal-enable-otp modal-dialog-centered">
                                    <div class="modal-content p-3 p-md-5">
                                        <div class="modal-body">
                                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                            <div class="text-center mb-4"><h3 class="mb-4">حذف المادة الخام</h3></div>
                                            <h4 class="text-center"> هل أنت متأكد انك تريد الحذف ؟</h4>
                                            <div id="enableOTPForm" class="row g-3 mt-5">
                                                <div class="col-12" align="center">
                                                    <button type="reset" class="col-4 btn btn-label-success mx-3" data-bs-dismiss="modal" aria-label="Close">لا</button>
                                                    <a asp-action="DeleteRowMaterials" asp-controller="FieldVisitForms" asp-route-id="@item.RmId" class="col-4 btn btn-danger me-1 me-sm-3 mx-5 ">نعم</a>
                                                </div>
                                            </div>
                                        </div>

                                    </div>
                                </div>
                            </div>
                        }
                    }

                </tbody>
            </table>



        </div>
    </div>


</div>





