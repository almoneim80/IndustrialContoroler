@using Microsoft.EntityFrameworkCore;
@using IndustrialContoroler.Models.Repositories;
@model VisitsTraffic;
@inject IRepository<VisitsTraffic> visitsTraffics;
@inject IndustrialContorolerDatabaseContext db;

@{
    var faId = ViewData["FaId"];
    var faNumber = db.Facilities.Where(fa => fa.FaId.Equals(faId) && fa.IsDeleted == false).Select(x => x.FaNumber).FirstOrDefault();
    var FormNo = db.Facilities.Where(fa => fa.FaId.Equals(faId) && fa.IsDeleted == false).Select(x => x.ReFormNo).FirstOrDefault();
    var visitTriaficData = db.VisitsTraffics.Where(x => x.FaId.Equals(ViewData["FaId"]) && x.IsDeleted.Equals(false)).ToList();
}

<div class="col-xxl " data-select2-id="30" id="statistic_2">
    <div class="card mb-4 ms-3 me-3" data-select2-id="29">
        <h5 style="background-color: rgb(82, 134, 203); color: azure;" class="card-header">تعديل بيانات الزيارة الخاصة بالمنشأة رقم @faNumber</h5>

        <form method="post" class=" mb-4 mt-3 ms-3 me-3">
            <div class="d-flex justify-content-between">

            @foreach (var item in visitTriaficData)
               {
                    <div class="row g-3">
                    <div class="col-md-3">
                      <label asp-for="VtVisitDate" class="form-label fs-5">تاريخ الزيارة</label>
                      <input asp-for="VtVisitDate" class="form-control" value="@item.VtVisitDate"/>
                      <span asp-validation-for="VtVisitDate" class="text-danger"></span>
                    </div>


                   <div class="col-md-3">
                      <label asp-for="ReFormNo" class="form-label fs-5">رقم إستمارة الطلب</label>
                       <input asp-for="ReFormNo" class="form-control" value="@FormNo" readonly value="@item.ReFormNo"/>
                      <span asp-validation-for="ReFormNo" class="text-danger"></span>
                    </div>

                    <div class="col -mb-3">
                        <label  asp-for="VtVisitPurpose" class="form-label fs-5">الغرض من الزيارة</label>
                        <select asp-for="VtVisitPurpose" class="select2 form-select form-select-lg fs-5" value="@item.VtVisitPurpose">
                            <option value=Null disabled selected hidden>حدد الغرض من الزيارة</option>
                            <option value="إنشاء سجل صناعي">إنشاء سجل صناعي</option>
                            <option value="تجديد سجل صناعي">تجديد سجل صناعي</option>
                            <option value="تعديل سجل صناعي">تعديل سجل صناعي</option>
                        </select>
                        <span asp-validation-for="VtVisitPurpose" class="text-danger"></span>
                      </div>


                    <div class="col-md-3">
                        <label  asp-for="FaDataState" class="form-label fs-5">حالة بيانات المنشأة</label>
                        <select asp-for="FaDataState" class="select2 form-select form-select-lg fs-5" value="@item.FaDataState">
                            <option value=Null disabled selected hidden>حدد حالة بيانات المنشأة</option>
                            <option value=1>مكتملة</option>
                            <option value=0>غير مكتملة</option>
                        </select>
                        <span asp-validation-for="FaDataState" class="text-danger"></span>
                      </div>

                    <input asp-for="FaId" class="form-control" hidden value="@item.FaId"/>
                    <input asp-for="VtId" class="form-control" hidden value="@item.VtId"/>

                    <div class="col justify-content-center">
                        <button type="submit" class="btn btn-primary me-1 me-sm-2"
                                asp-action="EditvisitsTraffic" asp-controller="FieldVisitForms">
                            تعديل
                        </button>
                    </div>

                </div>
               }
            </div>
        </form>
    </div>
</div>