@using Microsoft.EntityFrameworkCore;
@using IndustrialContoroler.Models.Repositories;
@model AgentsPoint;
@inject IRepository<AgentsPoint> agentsPoint;

@{
    //int FaNumber = 0;
    int counter = 1;
    int APId = 0;
    var FaId = ViewData["FaId"];
    var ApData = agentsPoint.GetAllFaData(ap => ap.FaId.Equals(ViewData["FaId"]) && ap.IsDeleted == false).ToList();
}


<div class="table-responsive m*-2">

    <a class="btn btn-primary gradient-buttons col-md-2 ms-3" data-bs-toggle="modal" data-bs-target="#modalCenter">
        <i class="fas fa-plus mx-1 my-auto"></i>إضافة وكيل/نقطة بيع
    </a>


    <form method="post">
        <div class="col-md-6 col-lg-4">
            <div class="mt-3">
                <!-- Modal -->
                <div class="modal fade" id="modalCenter" tabindex="-1" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="modalCenterTitle">بيانات الوكلاء ونقاط البيع</h5>
                                <button type="button"
                                        class="btn-close"
                                        data-bs-dismiss="modal"
                                        aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <div class="row g-3">
                                    <div class="col-md-4">
                                        <label asp-for="ApName" class="form-label fs-5">الاسم</label>
                                        <input asp-for="ApName" class="form-control" placeholder="الاسم" />
                                        <span asp-validation-for="ApName" class="text-danger"></span>
                                    </div>

                                    <div class="col-md-4">
                                        <label asp-for="ApTradeName" class="form-label fs-5">الاسم التجاري</label>
                                        <input asp-for="ApTradeName" class="form-control" placeholder="الاسم التجاري" />
                                        <span asp-validation-for="ApTradeName" class="text-danger"></span>
                                    </div>

                                    <div class="col-md-4">
                                        <label asp-for="ApPhoneNumber" class="form-label fs-5">رقم الهاتف</label>
                                        <input asp-for="ApPhoneNumber" class="form-control" placeholder="رقم الهاتف" />
                                        <span asp-validation-for="ApPhoneNumber" class="text-danger"></span>
                                    </div>

                                    <div class="col-md-6">
                                        <label asp-for="ApAddress" class="form-label fs-5">العنوان</label>
                                        <input asp-for="ApAddress" class="form-control" placeholder="العنوان" />
                                        <span asp-validation-for="ApAddress" class="text-danger"></span>
                                    </div>


                                    <div class="col-md-4">
                                        <label asp-for="ApType" class="form-label fs-5">النوع</label>
                                        <select asp-for="ApType" class="select2 form-select form-select-lg fs-5">
                                                <option value=Null selected hidden disabled>حدد النوع</option>
                                                <option value="وكيل">وكيل</option>
                                                <option value="نقطة بيع">نقطة بيع</option>
                                            </select>
                                            <span asp-validation-for="ApType" class="text-danger"></span>
                                        </div>

                                    <div class="row-md-6">
                                        <label asp-for="ApNotes" class="form-label fs-5">ملاحظات</label>
                                        <textarea asp-for="ApNotes" class="form-control" rows="1" placeholder="أكتب أي ملاحظات أخرى"></textarea>
                                    </div>
                                    <input asp-for="FaId" value="@FaId" class="form-control" hidden />

                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-label-secondary" data-bs-dismiss="modal">
                                    الغاء
                                </button>
                                <button type="submit" asp-action="AddagentsPoint" asp-controller="FieldVisitForms" class="btn btn-primary">أضافة</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </form>


    <div class="card m-3 mb-5">
        <div class="content-wrapper table-responsive " style="font-size: small; font-weight: 300;">

            <table class="table datatables-ajax table dataTable no-footer table-bordered" id="oneexample">
                <thead class="border-top">
                    <tr role="row">
                        <th class="sorting sorting_asc" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-sort="ascending" aria-label="رقم الوكيل/نقطة البيع: activate to sort column descending" style="width: 200.8px;">رقم الوكيل/نقطة البيع</th>
                        <th class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-label="اسم الوكيل او نقطة البيع: activate to sort column ascending" style="width: 400.1px;">اسم الوكيل او نقطة البيع</th>
                        <th class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-label="الاسم التجاري: activate to sort column ascending" style="width: 400.1px;">الاسم التجاري</th>
                        <th class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-label="رقم الهاتف: activate to sort column ascending" style="width: 400.1px;">رقم الهاتف</th>
                        <th class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-label="العنوان: activate to sort column ascending" style="width: 400.1px;">العنوان</th>
                        <th class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-label=" النوع : activate to sort column ascending" style="width: 400.1px;">النوع</th>
                        <th class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-label=" ملاحظات : activate to sort column ascending" style="width: 400.1px;">ملاحظات</th>
                        <th class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-label=" الاجراءات: activate to sort column ascending" style="width: 400.1px;">الاجراءات</th>
                    </tr>
                </thead>

                <tbody class="table-border-bottom-0">

                    @if (ApData is not null)
                    {

                        @foreach (var item in ApData)
                        {
                            APId = item.ApId;
                            <tr>
                                <td>@counter</td>
                                <td class="fs-5">@item.ApName</td>
                                <td class="fs-5">@item.ApTradeName</td>
                                <td class="fs-5">@item.ApPhoneNumber</td>
                                <td class="fs-5">@item.ApAddress</td>
                                <td class="fs-5">@item.ApType</td>
                                <td class="fs-5">@item.ApNotes</td>
                                <td>
                                    <div>
                                        <button type="button" class="btn dropdown-toggle hide-arrow p-0" data-bs-toggle="dropdown" aria-expanded="false">
                                            <i class="bx bx-dots-vertical-rounded"></i>
                                        </button>
                                        <div class="dropdown-menu" data-popper-placement="bottom-start" style="position: absolute; inset: 0px auto auto 0px; margin: 0px; transform: translate(37px, 25px);">
                                            <a class="dropdown-item" asp-route-Id="@item.ApId" asp-controller="FieldVisitForms" asp-action="EditagentsPoint"><i class="bx bx-edit-alt me-1"></i> تعديل  </a>

                                            <a class="dropdown-item" role="button" aria-pressed="true" style="font-size: 14px; color:red;" data-bs-toggle="modal" data-bs-target="#confirmDeletion-@item.ApId">
                                                <i class="bx bx-trash me-1" data-bs-toggle="modal" data-bs-target="#confirmDeletion-@item.ApId"></i> حذف
                                            </a>

                                        </div>
                                    </div>
                                </td>
                            </tr>

                            <div class="modal fade" id="confirmDeletion-@item.ApId" tabindex="-1" aria-hidden="true">
                                <div class="modal-dialog modal-simple modal-enable-otp modal-dialog-centered">
                                    <div class="modal-content p-3 p-md-5">
                                        <div class="modal-body">
                                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                            <div class="text-center mb-4"><h3 class="mb-4">حذف الوكيل / نقطة البيع </h3></div>
                                            <h4 class="text-center"> هل أنت متأكد انك تريد الحذف ؟</h4>
                                            <div id="enableOTPForm" class="row g-3 mt-5">
                                                <div class="col-12" align="center">
                                                    <button type="reset" class="col-4 btn btn-label-success mx-3" data-bs-dismiss="modal" aria-label="Close">لا</button>
                                                    <a asp-action="DeleteagentsPoint" asp-controller="FieldVisitForms" asp-route-id="@item.ApId" class="col-4 btn btn-danger me-1 me-sm-3 mx-5 ">نعم</a>
                                                </div>
                                            </div>
                                        </div>

                                    </div>
                                </div>
                            </div>

                            counter = counter + 1;
                        }
                    }

                </tbody>
            </table>



        </div>
    </div>


</div>


