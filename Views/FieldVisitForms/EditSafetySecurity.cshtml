@using Microsoft.EntityFrameworkCore;
@using IndustrialContoroler.Models.Repositories;
@model SafetySecurity;
@inject IRepository<SafetySecurity> safetysecurity;

@{
    var FaId = ViewData["FaId"];
    var SSId =  0;
    var MaData = safetysecurity.GetAllFaData(ss => ss.FaId.Equals(ViewData["FaId"]) && ss.IsDeleted == false).ToList();
    foreach (var item in MaData)
    {
        SSId = item.SsId;
    }
}


<div class="col-xxl " data-select2-id="30" id="statistic_2">
    <div class="card mb-4 ms-3 me-3" data-select2-id="29">
        <h5 style="background-color: rgb(82, 134, 203); color: azure;" class="card-header">تعديل وسائل الامن والسلامة للمنشأة رقم @FaId</h5>

         <form method="post" class="card-body">
                  <div class="row g-3">
                      <table class="table">
                      <thead>
                        <tr>
                          <th> اسم وسيلة الأمن</th>
                          <th> يوجد </th>
                          <th> لايوجد </th>
                          <th> لاينطبق </th>
                        </tr>
                      </thead>

                      <tbody>
                        <tr>
                          <td>
                              منظومة إطفاء الحرائق
                          </td>
                          <td>
                              <input asp-for="SsFireSystem" class="form-check-input" type="radio" value=يوجد/>
                          </td>
                          <td>
                              <input asp-for="SsFireSystem" class="form-check-input" type="radio" value=لايوجد />
                          </td>
                          <td>
                              <input asp-for="SsFireSystem" class="form-check-input" type="radio" value=لاينطبق />
                          </td>
                        </tr>

                        <tr>
                          <td class="text-nowrap">مخارج الطوارئ</td>
                          <td>
                              <input asp-for="SsEmergencyExit" class="form-check-input" type="radio" value="يوجد"/>
                          </td>
                          <td>
                              <input asp-for="SsEmergencyExit" class="form-check-input" type="radio" value="لايوجد" id="disabledCheck1" />
                          </td>
                          <td>
                              <input asp-for="SsEmergencyExit" class="form-check-input" type="radio" value="لاينطبق" id="disabledCheck1" />
                          </td>
                        </tr>


                        <tr>
                          <td class="text-nowrap">التهوية</td>
                          <td>
                              <input asp-for="SsVentilation" class="form-check-input" type="radio" value="يوجد"/>
                          </td>
                          <td>
                              <input asp-for="SsVentilation" class="form-check-input" type="radio" value="لايوجد" id="disabledCheck1" />
                          </td>
                          <td>
                              <input asp-for="SsVentilation" class="form-check-input" type="radio" value="لاينطبق" id="disabledCheck1" />
                          </td>

                        </tr>


                        <tr>
                          <td class="text-nowrap">الانارة</td>
                          <td>
                              <input asp-for="SsLighting" class="form-check-input" type="radio" value="يوجد"/>
                          </td>
                          <td>
                              <input asp-for="SsLighting" class="form-check-input" type="radio" value="لايوجد" id="disabledCheck1" />
                          </td>
                          <td>
                              <input asp-for="SsLighting" class="form-check-input" type="radio" value="لاينطبق" id="disabledCheck1" />
                          </td>
                        </tr>


                        <tr>
                          <td class="text-nowrap">حقيبة الاسعافات الاولية</td>
                          <td>
                              <input asp-for="SsFirstAidKit" class="form-check-input" type="radio" value="يوجد"/>
                          </td>
                          <td>
                              <input asp-for="SsFirstAidKit" class="form-check-input" type="radio" value="لايوجد" id="disabledCheck1" />
                          </td>
                          <td>
                              <input asp-for="SsFirstAidKit" class="form-check-input" type="radio" value="لاينطبق" id="disabledCheck1" />
                          </td>
                        </tr>


                        <tr>
                          <td class="text-nowrap">السلامة المهنية</td>
                          <td>
                              <input asp-for="SsOccSafety" class="form-check-input" type="radio" value="يوجد"/>
                          </td>
                          <td>
                              <input asp-for="SsOccSafety" class="form-check-input" type="radio" value="لايوجد" id="disabledCheck1" />
                          </td>
                          <td>
                              <input asp-for="SsOccSafety" class="form-check-input" type="radio" value="لاينطبق" id="disabledCheck1" />
                          </td>
                        </tr>


                        <tr>
                          <td class="text-nowrap">اللوحة الارشادية للأمن والسلامة</td>
                          <td>
                              <input asp-for="SsSafetyDashboard" class="form-check-input" type="radio" value="يوجد"/>
                          </td>
                          <td>
                              <input asp-for="SsSafetyDashboard" class="form-check-input" type="radio" value="لايوجد" id="disabledCheck1" />
                          </td>
                          <td>
                              <input asp-for="SsSafetyDashboard" class="form-check-input" type="radio" value="لاينطبق" id="disabledCheck1" />
                          </td>
                        </tr>

                        </tbody>
                        </table>
                   
                      </div>


                 <input asp-for="FaId" value="@FaId" class="form-control" hidden />
                    <input asp-for="SsId" value="@SSId" class="form-control" hidden />

                    <div class="col justify-content-center">
                        <button type="submit" class="btn btn-primary me-1 me-sm-2"
                                asp-action="EditSafetySecurity" asp-controller="FieldVisitForms">
                            تعديل
                        </button>
                    </div>
                  
                </form>
    </div>
</div>
